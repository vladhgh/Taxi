<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/padding_32"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="@dimen/padding_16"
        android:text="Здесь ты можешь выбрать удобный тебе способ оплаты, друг!"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/padding_8"
            android:src="@drawable/ic_visa"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/padding_8"
            android:src="@drawable/ic_intro_wallet"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="@dimen/padding_8"
            android:text="Способ оплаты"/>
        <Spinner
            android:id="@+id/spinner_pyment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownWidth="wrap_content"
            android:layout_marginBottom="@dimen/padding_16"
            android:spinnerMode="dropdown">
        </Spinner>
        <Button
            android:id="@+id/save_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/padding_16"
            android:textColorHint="@color/yellow50"
            android:hint="Сохранить"/>
    </LinearLayout>
</LinearLayout>
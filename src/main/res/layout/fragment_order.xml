<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/driver_cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/car"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_32"
            android:layout_marginRight="@dimen/padding_32"
            android:layout_marginBottom="@dimen/padding_8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_price"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="Price: 500&#8381;"/>
            <TextView
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_16"
                android:layout_gravity="start"
                android:text="From: 110 Geroyev Tankograda street"/>
            <TextView
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="To: 44 Agalakova street"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/order_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_marginRight="@dimen/padding_8"
                android:layout_gravity="end"
                style="?android:attr/buttonBarButtonStyle"
                android:textAllCaps="false"
                android:text="Отменить заказ"/>
            <Button
                android:id="@+id/order_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_marginRight="@dimen/padding_8"
                android:layout_gravity="end"
                style="?android:attr/buttonBarButtonStyle"
                android:textAllCaps="false"
                android:text="Заказать такси"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
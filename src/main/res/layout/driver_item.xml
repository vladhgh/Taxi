<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/driver_cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_8"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/driver_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="0dp"
                android:layout_margin="@dimen/padding_16"
                android:src="@drawable/profile"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="42"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/driver_name"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Игорь Прокопьев"/>
                <TextView
                    android:id="@+id/driver_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_8"
                    android:textSize="12sp"
                    android:text="Citroen C4"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/driver_call"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTint="@color/yellow900"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:layout_gravity="end"
                style="?android:attr/buttonBarButtonStyle"
                android:textAllCaps="false"
                android:text="Позвонить"/>
            <Button
                android:id="@+id/driver_message"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTint="@color/yellow900"
                android:drawableLeft="@drawable/ic_message_black_24dp"
                android:layout_gravity="end"
                style="?android:attr/buttonBarButtonStyle"
                android:textAllCaps="false"
                android:text="Сообщение"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>